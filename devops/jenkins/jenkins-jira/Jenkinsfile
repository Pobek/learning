#!/groovy

pipeline{
  environment{
    JIRA_SITE="Jira-Evya"
  }
  agent any
  stages{
    stage('Jira'){
      steps{
        comment("JEN-1", "My comment")
      }
    }
  }
}

void comment(jiraKey, commentText) {
  def commentBody = [ body : commentText ]
  jiraAddComment idOrKey: jiraKey, comment: commentBody
}
